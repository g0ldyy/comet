# Redis Configuration
REDIS_PASSWORD=your_secure_redis_password_here
ENABLE_REDIS=true
REDIS_URI=redis://:your_secure_redis_password_here@comet_redis:6379

# Cache TTL Settings (in seconds)
METADATA_CACHE_TTL=2592000   # 30 days - metadata rarely changes
TORRENT_CACHE_TTL=1296000    # 15 days - torrent data is fairly stable
DEBRID_CACHE_TTL=86400       # 1 day - debrid availability changes more frequently  
STREAM_CACHE_TTL=1800        # 30 minutes - streams change frequently

# Performance Settings
API_CONCURRENCY_LIMIT=32     # Max concurrent external API calls (adjust based on instance size)

# Lock and Timeout Settings
SCRAPE_LOCK_TTL=300          # 5 minutes - how long to hold scrape locks
SCRAPE_WAIT_TIMEOUT=30       # 30 seconds - max time to wait for other scrapes

# Required Docker Compose Variables
COMET_HOSTNAME=comet.example.com
DOCKER_DATA_DIR=/path/to/your/data/directory